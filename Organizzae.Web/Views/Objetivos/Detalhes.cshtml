@model Organizzae.Application.DTOs.Objetivo.ObjetivoDto

@{
    ViewData["Title"] = "Detalhes do Objetivo";
    var percentual = Model.ValorAlvo > 0 ? (Model.ValorAtual / Model.ValorAlvo * 100) : 0;
    var diasRestantes = Model.DataFim.HasValue ? (Model.DataFim.Value - DateTime.Now).Days : 0;
    var corBarra = percentual >= 100 ? "bg-success" : percentual >= 75 ? "bg-info" : percentual >= 50 ? "bg-warning" : "bg-danger";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Cabeçalho -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>
                        <i class="bi bi-bullseye text-primary"></i> @Model.Descricao
                        @if (Model.Concluido)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Concluído
                            </span>
                        }
                    </h2>
                    <p class="text-muted">Detalhes completos do objetivo</p>
                </div>
                <div>
                    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-light">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <!-- Card Principal -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <!-- Progresso -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <h5><i class="bi bi-graph-up"></i> Progresso</h5>
                            <h3 class="text-primary">@percentual.ToString("F1")%</h3>
                        </div>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar @corBarra" role="progressbar" 
                                 style="width: @(Math.Min(percentual, 100))%">
                                <strong>@percentual.ToString("F1")%</strong>
                            </div>
                        </div>
                    </div>

                    <!-- Valores -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-3">
                            <div class="card bg-light border-0 h-100">
                                <div class="card-body">
                                    <small class="text-muted d-block mb-1">Valor Alvo</small>
                                    <h4 class="text-success mb-0">@Model.ValorAlvo.ToString("C")</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light border-0 h-100">
                                <div class="card-body">
                                    <small class="text-muted d-block mb-1">Valor Atual</small>
                                    <h4 class="text-primary mb-0">@Model.ValorAtual.ToString("C")</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light border-0 h-100">
                                <div class="card-body">
                                    <small class="text-muted d-block mb-1">Valor Restante</small>
                                    <h4 class="text-danger mb-0">@((Model.ValorAlvo - Model.ValorAtual).ToString("C"))</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light border-0 h-100">
                                <div class="card-body">
                                    <small class="text-muted d-block mb-1">% Atingido</small>
                                    <h4 class="text-info mb-0">@percentual.ToString("F1")%</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Linha Divisória -->
                    <hr>

                    <!-- Datas e Prazos -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="mb-3"><i class="bi bi-calendar"></i> Datas</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td class="text-muted">Data de Início:</td>
                                    <td><strong>@Model.DataInicio.ToString("dd/MM/yyyy")</strong></td>
                                </tr>
                                @if (Model.DataFim.HasValue)
                                {
                                    <tr>
                                        <td class="text-muted">Data Alvo:</td>
                                        <td><strong>@Model.DataFim.Value.ToString("dd/MM/yyyy")</strong></td>
                                    </tr>
                                    @if (!Model.Concluido)
                                    {
                                        <tr>
                                            <td class="text-muted">Dias Restantes:</td>
                                            <td>
                                                <strong>@diasRestantes dias</strong>
                                                @if (diasRestantes <= 7)
                                                {
                                                    <span class="badge bg-danger">Urgente</span>
                                                }
                                                else if (diasRestantes <= 30)
                                                {
                                                    <span class="badge bg-warning">Próximo ao prazo</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                <tr>
                                    <td class="text-muted">Criado em:</td>
                                    <td><strong>@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</strong></td>
                                </tr>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <h6 class="mb-3"><i class="bi bi-calculator"></i> Cálculos</h6>
                            @if (Model.DataFim.HasValue && !Model.Concluido)
                            {
                                var valorRestante = Model.ValorAlvo - Model.ValorAtual;
                                var mesesRestantes = diasRestantes / 30.0;
                                var semanasRestantes = diasRestantes / 7.0;
                                var valorPorMes = mesesRestantes > 0 ? valorRestante / (decimal)mesesRestantes : 0;
                                var valorPorSemana = semanasRestantes > 0 ? valorRestante / (decimal)semanasRestantes : 0;
                                var valorPorDia = diasRestantes > 0 ? valorRestante / diasRestantes : 0;

                                <table class="table table-sm">
                                    <tr>
                                        <td class="text-muted">Economizar por Mês:</td>
                                        <td><strong class="text-primary">@valorPorMes.ToString("C")</strong></td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Economizar por Semana:</td>
                                        <td><strong class="text-info">@valorPorSemana.ToString("C")</strong></td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Economizar por Dia:</td>
                                        <td><strong class="text-success">@valorPorDia.ToString("C")</strong></td>
                                    </tr>
                                </table>
                            }
                            else if (Model.Concluido)
                            {
                                <div class="alert alert-success mb-0">
                                    <i class="bi bi-trophy-fill"></i> <strong>Objetivo Concluído!</strong>
                                    <br>Parabéns por atingir sua meta!
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Linha Divisória -->
                    <hr>

                    <!-- Ações -->
                    <div class="d-flex gap-2">
                        @if (!Model.Concluido)
                        {
                            <button type="button" class="btn btn-primary" 
                                    data-bs-toggle="modal" data-bs-target="#modalAdicionarValor">
                                <i class="bi bi-plus-circle"></i> Adicionar Valor
                            </button>
                            <form asp-action="MarcarConcluido" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Marcar como Concluído
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="MarcarConcluido" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-arrow-counterclockwise"></i> Reabrir Objetivo
                                </button>
                            </form>
                        }
                        
                        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        
                        <form asp-action="Excluir" asp-route-id="@Model.Id" method="post" 
                              onsubmit="return confirm('Tem certeza que deseja excluir este objetivo?');" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Timeline Visual (se houver histórico no futuro) -->
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6><i class="bi bi-clock-history"></i> Linha do Tempo</h6>
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <strong>@Model.DataInicio.ToString("dd/MM/yyyy")</strong>
                                <p class="text-muted mb-0">Objetivo criado</p>
                            </div>
                        </div>
                        
                        @if (Model.DataFim.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker @(Model.Concluido ? "bg-success" : "bg-warning")"></div>
                                <div class="timeline-content">
                                    <strong>@Model.DataFim.Value.ToString("dd/MM/yyyy")</strong>
                                    <p class="text-muted mb-0">
                                        @(Model.Concluido ? "Objetivo concluído" : "Data alvo")
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Adicionar Valor -->
<div class="modal fade" id="modalAdicionarValor" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adicionar Valor ao Objetivo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AdicionarValor" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p class="text-muted">@Model.Descricao</p>
                    <div class="mb-3">
                        <label for="valor" class="form-label">Valor a Adicionar</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input type="number" class="form-control" id="valor" name="valor" 
                                   step="0.01" min="0.01" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Adicionar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }
        .timeline::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }
        .timeline-item {
            position: relative;
            padding-bottom: 20px;
        }
        .timeline-marker {
            position: absolute;
            left: -22px;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            border: 3px solid #fff;
            box-shadow: 0 0 0 2px #dee2e6;
        }
    </style>
}
