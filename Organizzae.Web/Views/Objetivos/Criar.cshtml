@model Organizzae.Application.DTOs.Objetivo.CriarObjetivoDto

@{
    ViewData["Title"] = "Novo Objetivo";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Cabeçalho -->
            <div class="mb-4">
                <h2><i class="bi bi-bullseye text-primary"></i> Novo Objetivo</h2>
                <p class="text-muted">Defina um novo objetivo financeiro</p>
            </div>

            <!-- Card do Formulário -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Criar" method="post">
                        @Html.AntiForgeryToken()
                        
                        <!-- Descrição -->
                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label">
                                <i class="bi bi-tag"></i> Descrição do Objetivo <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Descricao" class="form-control" placeholder="Ex: Comprar um carro, Viagem para Europa, Reserva de emergência" />
                            <span asp-validation-for="Descricao" class="text-danger small"></span>
                        </div>

                        <!-- Valores -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ValorAlvo" class="form-label">
                                    <i class="bi bi-cash-stack"></i> Valor Alvo <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="ValorAlvo" class="form-control" type="number" step="0.01" min="0.01" placeholder="0,00" />
                                </div>
                                <span asp-validation-for="ValorAlvo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ValorAtual" class="form-label">
                                    <i class="bi bi-wallet2"></i> Valor Atual
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="ValorAtual" class="form-control" type="number" step="0.01" min="0" placeholder="0,00" />
                                </div>
                                <span asp-validation-for="ValorAtual" class="text-danger small"></span>
                                <small class="text-muted">Quanto você já tem economizado para este objetivo?</small>
                            </div>
                        </div>

                        <!-- Datas -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DataInicio" class="form-label">
                                    <i class="bi bi-calendar-event"></i> Data de Início <span class="text-danger">*</span>
                                </label>
                                <input asp-for="DataInicio" class="form-control" type="date" />
                                <span asp-validation-for="DataInicio" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DataFim" class="form-label">
                                    <i class="bi bi-calendar-check"></i> Data Alvo
                                </label>
                                <input asp-for="DataFim" class="form-control" type="date" />
                                <span asp-validation-for="DataFim" class="text-danger small"></span>
                                <small class="text-muted">Quando você quer atingir este objetivo?</small>
                            </div>
                        </div>

                        <!-- Preview do Objetivo -->
                        <div class="alert alert-info mb-3" id="previewObjetivo" style="display: none;">
                            <h6 class="alert-heading"><i class="bi bi-info-circle"></i> Resumo do Objetivo</h6>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted d-block">Valor a Economizar:</small>
                                    <strong id="valorEconomizar">R$ 0,00</strong>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted d-block">Prazo:</small>
                                    <strong id="prazoObjetivo">- dias</strong>
                                </div>
                            </div>
                            <hr>
                            <div id="sugestaoMensal" style="display: none;">
                                <small class="text-muted d-block">Sugestão de Economia Mensal:</small>
                                <strong class="text-success" id="valorMensal">R$ 0,00</strong>
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Criar Objetivo
                            </button>
                            <a asp-action="Index" class="btn btn-light">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Dicas -->
            <div class="card border-0 bg-light mt-4">
                <div class="card-body">
                    <h6><i class="bi bi-lightbulb text-warning"></i> Dicas para Definir Objetivos</h6>
                    <ul class="mb-0 small">
                        <li>Seja específico: "Comprar carro novo" em vez de "economizar"</li>
                        <li>Defina prazos realistas para manter a motivação</li>
                        <li>Se já tem dinheiro guardado, informe no "Valor Atual"</li>
                        <li>Você pode adicionar valores progressivamente ao objetivo</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Calcular e exibir preview do objetivo
        function atualizarPreview() {
            const valorAlvo = parseFloat(document.getElementById('ValorAlvo').value) || 0;
            const valorAtual = parseFloat(document.getElementById('ValorAtual').value) || 0;
            const dataInicio = document.getElementById('DataInicio').value;
            const dataFim = document.getElementById('DataFim').value;

            if (valorAlvo > 0) {
                const valorEconomizar = valorAlvo - valorAtual;
                document.getElementById('valorEconomizar').textContent = 
                    'R$ ' + valorEconomizar.toFixed(2).replace('.', ',');

                if (dataInicio && dataFim) {
                    const inicio = new Date(dataInicio);
                    const fim = new Date(dataFim);
                    const diasRestantes = Math.ceil((fim - inicio) / (1000 * 60 * 60 * 24));
                    
                    document.getElementById('prazoObjetivo').textContent = diasRestantes + ' dias';

                    if (diasRestantes > 0) {
                        const mesesRestantes = diasRestantes / 30;
                        const valorMensal = valorEconomizar / mesesRestantes;
                        
                        document.getElementById('valorMensal').textContent = 
                            'R$ ' + valorMensal.toFixed(2).replace('.', ',');
                        document.getElementById('sugestaoMensal').style.display = 'block';
                    }

                    document.getElementById('previewObjetivo').style.display = 'block';
                }
            }
        }

        // Adicionar eventos
        document.getElementById('ValorAlvo').addEventListener('input', atualizarPreview);
        document.getElementById('ValorAtual').addEventListener('input', atualizarPreview);
        document.getElementById('DataInicio').addEventListener('change', atualizarPreview);
        document.getElementById('DataFim').addEventListener('change', atualizarPreview);

        // Definir data de início como hoje por padrão
        document.getElementById('DataInicio').valueAsDate = new Date();
    </script>
}
