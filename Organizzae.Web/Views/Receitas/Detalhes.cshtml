@model Organizzae.Application.DTOs.Receita.ReceitaDto

@{
    ViewData["Title"] = "Detalhes da Receita";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Cabeçalho -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="bi bi-cash-coin text-success"></i> Detalhes da Receita</h2>
                    <p class="text-muted">Informações completas da receita</p>
                </div>
                <div>
                    <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-light">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <!-- Card Principal -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <!-- Valor Destaque -->
                    <div class="text-center py-4 mb-4 bg-light rounded">
                        <small class="text-muted d-block mb-2">Valor da Receita</small>
                        <h1 class="text-success mb-0 display-4">@Model.Valor.ToString("C")</h1>
                    </div>

                    <!-- Informações -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="mb-3"><i class="bi bi-info-circle"></i> Informações Gerais</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td class="text-muted">Descrição:</td>
                                    <td><strong>@Model.Descricao</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Data:</td>
                                    <td><strong>@Model.Data.ToString("dd/MM/yyyy")</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Dia da Semana:</td>
                                    <td><strong>@Model.Data.ToString("dddd", new System.Globalization.CultureInfo("pt-BR"))</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Tipo:</td>
                                    <td>
                                        @if (Model.Recorrente)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-arrow-repeat"></i> Recorrente
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-cash"></i> Avulsa
                                            </span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <h6 class="mb-3"><i class="bi bi-clock-history"></i> Datas de Registro</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td class="text-muted">Criado em:</td>
                                    <td><strong>@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</strong></td>
                                </tr>
                                @if (Model.DataAtualizacao.HasValue)
                                {
                                    <tr>
                                        <td class="text-muted">Última Atualização:</td>
                                        <td><strong>@Model.DataAtualizacao.Value.ToString("dd/MM/yyyy HH:mm")</strong></td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>

                    <!-- Linha Divisória -->
                    <hr>

                    <!-- Ações -->
                    <div class="d-flex gap-2">
                        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        
                        <form asp-action="Excluir" asp-route-id="@Model.Id" method="post" 
                              onsubmit="return confirm('Tem certeza que deseja excluir esta receita?');" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </button>
                        </form>

                        <a asp-action="Index" class="btn btn-light ms-auto">
                            <i class="bi bi-arrow-left"></i> Voltar para Lista
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card Informações Adicionais -->
            @if (Model.Recorrente)
            {
                <div class="card border-0 bg-success bg-opacity-10">
                    <div class="card-body">
                        <h6><i class="bi bi-info-circle text-success"></i> Receita Recorrente</h6>
                        <p class="mb-0 small">
                            Esta é uma receita recorrente, ou seja, você espera recebê-la todos os meses. 
                            Isso ajuda no planejamento financeiro e no cálculo da sua renda mensal fixa.
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="card border-0 bg-light">
                    <div class="card-body">
                        <h6><i class="bi bi-info-circle text-secondary"></i> Receita Avulsa</h6>
                        <p class="mb-0 small">
                            Esta é uma receita avulsa, um ganho pontual que não se repete mensalmente. 
                            Ótimo para acompanhar rendas extras como freelances, vendas ou bônus.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
