@model IEnumerable<Organizzae.Application.DTOs.Receita.ReceitaDto>

@{
    ViewData["Title"] = "Receitas";
    var mesAtual = ViewBag.MesAtual ?? DateTime.Now.Month;
    var anoAtual = ViewBag.AnoAtual ?? DateTime.Now.Year;
    var totalReceitas = ViewBag.TotalReceitas ?? 0m;
    var meses = new[] { "Janeiro", "Fevereiro", "Março", "Abril", "Maio", "Junho", "Julho", "Agosto", "Setembro", "Outubro", "Novembro", "Dezembro" };
}

<div class="container-fluid py-4">
    <!-- Cabeçalho -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="bi bi-cash-coin text-success"></i> Receitas</h2>
                    <p class="text-muted">Gerenciamento de receitas e ganhos</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Relatorio", "Receitas")" class="btn btn-outline-primary">
                        <i class="bi bi-graph-up"></i> Relatório Anual
                    </a>
                    <a href="@Url.Action("Criar", "Receitas")" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Nova Receita
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros e Total -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form method="get" asp-action="Index" class="row g-3">
                        <div class="col-md-5">
                            <label for="mes" class="form-label">Mês</label>
                            <select name="mes" id="mes" class="form-select">
                                @for (int i = 1; i <= 12; i++)
                                {
                                    <option value="@i" selected="@(i == mesAtual)">@meses[i-1]</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-5">
                            <label for="ano" class="form-label">Ano</label>
                            <select name="ano" id="ano" class="form-select">
                                @for (int i = DateTime.Now.Year - 2; i <= DateTime.Now.Year + 1; i++)
                                {
                                    <option value="@i" selected="@(i == anoAtual)">@i</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Filtrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <h6 class="mb-1">Total de Receitas</h6>
                    <h6 class="text-white-50 mb-2">@meses[mesAtual-1] @anoAtual</h6>
                    <h3 class="mb-0">@totalReceitas.ToString("C")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Estatísticas -->
    @{
        var receitasRecorrentes = Model.Count(r => r.Recorrente);
        var receitasAvulsas = Model.Count() - receitasRecorrentes;
        var mediaReceitas = Model.Any() ? Model.Average(r => r.Valor) : 0;
    }

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded p-3">
                                <i class="bi bi-list-check text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total de Receitas</h6>
                            <h4 class="mb-0">@Model.Count()</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded p-3">
                                <i class="bi bi-arrow-repeat text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Recorrentes</h6>
                            <h4 class="mb-0">@receitasRecorrentes</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded p-3">
                                <i class="bi bi-calculator text-info fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Média por Receita</h6>
                            <h4 class="mb-0">@mediaReceitas.ToString("C")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Receitas -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Nenhuma receita encontrada</h5>
                <p class="text-muted">Registre suas primeiras receitas para @meses[mesAtual-1]!</p>
                <a href="@Url.Action("Criar", "Receitas")" class="btn btn-success mt-2">
                    <i class="bi bi-plus-circle"></i> Criar Primeira Receita
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Data</th>
                                <th>Descrição</th>
                                <th>Tipo</th>
                                <th class="text-end">Valor</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var receita in Model.OrderByDescending(r => r.Data))
                            {
                                <tr>
                                    <td>
                                        <strong>@receita.Data.ToString("dd/MM/yyyy")</strong>
                                        <br><small class="text-muted">@receita.Data.ToString("dddd", new System.Globalization.CultureInfo("pt-BR"))</small>
                                    </td>
                                    <td>
                                        <strong>@receita.Descricao</strong>
                                    </td>
                                    <td>
                                        @if (receita.Recorrente)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-arrow-repeat"></i> Recorrente
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-cash"></i> Avulsa
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <h5 class="text-success mb-0">@receita.Valor.ToString("C")</h5>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Detalhes", "Receitas", new { id = receita.Id })" 
                                               class="btn btn-sm btn-outline-primary" title="Detalhes">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Editar", "Receitas", new { id = receita.Id })" 
                                               class="btn btn-sm btn-outline-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="Excluir" asp-route-id="@receita.Id" method="post" 
                                                  onsubmit="return confirm('Tem certeza que deseja excluir esta receita?');" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Excluir">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3" class="text-end">TOTAL:</th>
                                <th class="text-end">
                                    <h5 class="text-success mb-0">@totalReceitas.ToString("C")</h5>
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
